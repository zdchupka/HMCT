                              Margin="{TemplateBinding Padding}"
                              Stretch="Uniform"
                              x:Name="path"
                              Data="{StaticResource RevertToLstSavedGeometry}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Opacity"
                                    Value="0.75" />
